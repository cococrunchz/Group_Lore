<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdfd3"
    tools:context=".page_1">

    <Button
        android:id="@+id/btn2"
        android:layout_width="132dp"
        android:layout_height="46dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/retrogaming"
        android:text="Banana"
        app:layout_constraintBottom_toTopOf="@+id/txtdesc"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="132dp"
        android:layout_height="46dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/retrogaming"
        android:text="Sandwich"
        app:layout_constraintBottom_toTopOf="@+id/txtdesc"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintHorizontal_bias="0.365"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtdesc"
        android:layout_width="401dp"
        android:layout_height="160dp"
        android:layout_marginBottom="92dp"
        android:fontFamily="@font/retrogaming"
        android:text="You wake up one morning for another school day, you bathed, dressed and just about to eat breakfast before heading off. In a rush, you looked in the fridge and checked your options: a week-old sandwich or a single banana. Which one will you eat?"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="212dp"
        android:layout_height="305dp"
        android:layout_marginTop="152dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/banana" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="188dp"
        android:layout_height="237dp"
        android:layout_marginTop="204dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sandwich" />"
    tools:layout_editor_absoluteX="176dp"
    tools:layout_editor_absoluteY="523dp" />
</androidx.constraintlayout.widget.ConstraintLayout>